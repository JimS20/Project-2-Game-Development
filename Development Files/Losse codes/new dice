##Random import voor dice
import random, pygame, images

pygame.init()

display_width = 400
display_hight = 300
gameDisplay = pygame.display.set_mode((display_width, display_hight))

font = pygame.font.SysFont(None, 30)

window = pygame.display.set_mode((400, 300))
pygame.display.set_caption("Dobbelsteen worp")

white = (255,255,255)


OneFace = pygame.image.load("images/1.png")
TwoFace = pygame.image.load("images/2.png")
ThreeFace = pygame.image.load("images/3.png")
FourFace = pygame.image.load("images/4.png")
FiveFace = pygame.image.load("images/5.png")
SixFace = pygame.image.load("images/6.png")

# massage hoe hij er uit moet zien en waar
def messages_to_screen(msg, color, lokatie1, lokatie2):
    screen_text = font.render(msg, True, color)
    gameDisplay.blit(screen_text, [display_hight / lokatie1, display_width / lokatie2])

##als width weer 800 is en height 600 1,74, 3.5
messages_to_screen("you rolled a ", white, 2.1, 3.5)
##als width weer 800 is en height 600 2.3,4
messages_to_screen("Press 'enter' to roll the dice", white, 5, 5)
pygame.display.update()



def RollDice():
    #create 1 variables and assign them random numbers
    for event in pygame.event.get():
        if pygame.event == pygame.K_DOWN:
            if pygame.event == pygame.K_KP_ENTER:
                dice = random.randint(1,6)

#Show the dice1 face
                if dice == 1:
                    return window.blit(OneFace, (140, 150))
                elif dice == 2:
                    return window.blit(TwoFace, (140, 150))
                elif dice == 3:
                    return window.blit(ThreeFace, (140, 150))
                elif dice == 4:
                    return window.blit(FourFace, (140, 150))
                elif dice == 5:
                    return window.blit(FiveFace, (140, 150))
                elif dice == 6:
                    return window.blit(SixFace, (140, 150))

roll_again = "yes"
gameLoop = True
def game_Loop():
 while gameLoop:
     for event in pygame.event.get():
         if (event.type == pygame.QUIT):
             gameLoop = False


print('Press \'enter\' to roll the dice')
input()
dice = RollDice()

pygame.display.flip()



pygame.time.wait(10000)

pygame.quit()

