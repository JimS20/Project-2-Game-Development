##Hoogste dobbelsteen worp bepaalt wie als eerste begint...
import random, pygame

pygame.init()

window = pygame.display.set_mode((800, 600))

pygame.display.set_caption("Window")

black = (0,0,0)
white = (255,255,255)

clock = pygame.time.Clock()

dice1 = pygame.image.load("images/1.png")
dice2 = pygame.image.load("images/2.png")
dice3 = pygame.image.load("images/3.png")
dice4 = pygame.image.load("images/4.png")
dice5 = pygame.image.load("images/5.png")
dice6 = pygame.image.load("images/6.png")
alldice = pygame.image.load("images/6dicecubes.png")

diceCurrentImage = 1
gameLoop=True
while gameLoop:
    for event in pygame.event.get():
        if (event.type==pygame.QUIT):
            gameLoop=False
        window.fill(white)
        if (diceCurrentImage==1):
            window.blit(alldice, (10,10))

        if (diceCurrentImage==2):
            window.blit(dice1, (20,20))

        if (diceCurrentImage==2):
            diceCurrentImage=1

        else:
            diceCurrentImage+=1;

        pygame.display.flip()

        clock.tick(50)

pygame.quit()

min = 1
max = 6

roll_again = "yes"

while roll_again == "yes" or roll_again == "y":
    print("De dobbelsteen rolt...")
    print("De waarde van jou dobbelsteen is....")
    print(random.randint(min, max))

    roll_again = input("Roll the dices again?")
