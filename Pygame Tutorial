import pygame
import time
import random
#initialises pygame and all the modules that comes with pygame
pygame.init()
display_width = 800
display_height = 600
black = (0, 0, 0)
white = (255, 255, 255)

car_width = 153
car_height = 238

#the game's width and height (resolution)
gameDisplay = pygame.display.set_mode((display_width, display_height))
#the name of the game(the window changes to the name of the game)
pygame.display.set_caption('a bit')
#game clock
clock = pygame.time.Clock()

carImg = pygame.image.load('Naamloos.png')

def things(thingx, thingy, thingw, thingh, color):
    pygame.draw.rect(gameDisplay, color, [thingx, thingy, thingw, thingh])

def car(x, y):
    # blit = drawing 2 little background stuf
    gameDisplay.blit(carImg, (x, y))

def text_objects(text, font):
    textSurface = font.render(text, True, black)
    return textSurface, textSurface.get_rect()



def message_display(text):
    largeText = pygame.font.Font('freesansbold.ttf', 115)
    TextSurf, TextRect = text_objects(text, largeText)
    TextRect.center = ((display_width/2), (display_height/2))
    gameDisplay.blit(TextSurf, TextRect)

    pygame.display.update()

    time.sleep(5)
    #it goes back to the game and the gameloop
    game_loop()

def crash():
    message_display('You Crashed')

def game_loop():

    x = (display_width * 0.45)
    y = (display_height * 0.5)

    x_change = 0
    y_change = 0

    thing_startx = random.randrange(0, display_width)
    thing_starty = -600
    thing_speed = 7
    thing_width = 100
    thing_height = 100

    #Whe have not crashed yet by opening the game
    gameExit = False


    #while not crashed, do this
    while not gameExit:
        #it gets any event that happens, what button is pressed, where is the mouse
        for event in pygame.event.get():
            #pygame.QUIT is when x is pressed (het is een event dat kan gebeuren om de game te suiten
            if event.type == pygame.QUIT:
                #game sluiten
                pygame.quit()
                quit()
            if event.type == pygame.KEYDOWN:
                if event.key == pygame.K_LEFT:
                    x_change = -5
                elif event.key == pygame.K_RIGHT:
                    x_change = 5
                elif event.key == pygame.K_UP:
                    y_change = -5
                elif event.key == pygame.K_DOWN:
                    y_change = 5
            if event.type == pygame.KEYUP:
                if event.key == pygame.K_LEFT or event.key == pygame.K_RIGHT or event.key == pygame.K_UP or event.key == pygame.K_DOWN:
                    x_change = 0
                    y_change = 0

        x += x_change
        y += y_change

        gameDisplay.fill(white)

        #things(thingx, thingy, thingw, thingh, color):
        things(thing_startx, thing_starty, thing_width, thing_height, black)
        thing_starty += thing_speed
            #it prints all the events that are happening
            #print(event)

        car(x, y)

        if x > display_width - car_width or x < 0 or y > display_height - car_height or y < 0:
            gameExit = True
        if thing_starty > display_height:
            thing_starty = 0 - thing_height
            thing_startx = random.randrange(0, display_width)

        #Updates the game itself so it doesn't close after 1 frame
        pygame.display.update()
        #frames per seond
        clock.tick(60)

game_loop()

pygame.quit()
quit()