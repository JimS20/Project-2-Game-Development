##Random import voor dice
import random, pygame, images

pygame.init()

display_width = 800
display_hight = 600
gameDisplay = pygame.display.set_mode((display_width, display_hight))

font = pygame.font.SysFont(None, 30)

window = pygame.display.set_mode((800, 600))
pygame.display.set_caption("Dobbelsteen worp")

white = (255,255,255)


OneFace = pygame.image.load("images/1.png")
TwoFace = pygame.image.load("images/2.png")
ThreeFace = pygame.image.load("images/3.png")
FourFace = pygame.image.load("images/4.png")
FiveFace = pygame.image.load("images/5.png")
SixFace = pygame.image.load("images/6.png")

# massage hoe hij er uit moet zien en waar
def messages_to_screen(msg, color, lokatie1, lokatie2):
    screen_text = font.render(msg, True, color)
    gameDisplay.blit(screen_text, [display_hight / lokatie1, display_width / lokatie2])

messages_to_screen("you rolled a ", white, 1.74, 3.5) ##als width weer 800 is en height 600 1,74, 3.5
messages_to_screen("Press 'enter' to roll the dice", white, 2.3, 4) ##als width weer 800 is en height 600 2.3,4
pygame.display.update()



def RollDice():
    #create 1 variables and assign them random numbers
    dice = random.randint(1,6)

#Show the dice1 face
    if dice == 1:
        return window.blit(OneFace, (350, 250))
    elif dice == 2:
        return window.blit(TwoFace, (350, 250))
    elif dice == 3:
        return window.blit(ThreeFace, (350, 250))
    elif dice == 4:
        return window.blit(FourFace, (350, 250))
    elif dice == 5:
        return window.blit(FiveFace, (350, 250))
    elif dice == 6:
        return window.blit(SixFace, (350, 250))


roll_again = "yes"
gameLoop = True
def game_Loop():
 while gameLoop:
     for event in pygame.event.get():
         if (event.type == pygame.QUIT):
             gameLoop = False

print('Press \'enter\' to roll the dice')
input()
dice = RollDice()

pygame.display.flip()

if roll_again == "yes" or roll_again == "y":
    roll_again = input("Roll the dices again?")

pygame.time.wait(10000)

pygame.quit()

